{
  "name": "@openkitchen/filebox-mcp",
  "version": "1.1.0",
  "description": "Model Context Protocol (MCP) Server for File-based Agent Messaging",
  "main": "build/index.js",
  "module": "build/index.js",
  "type": "module",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "filebox-mcp": "build/index.js"
  },
  "exports": {
    ".": {
      "import": "./build/index.js",
      "require": "./build/index.js"
    }
  },
  "files": [
    "build/",
    "README.md",
    "LICENSE",
    ".filebox.example",
    ".filebox.global.example"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "agent",
    "messaging",
    "filebox",
    "cursor",
    "ai",
    "communication"
  ],
  "author": "OpenKitchen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/openkitchen/filebox-mcp.git"
  },
  "homepage": "https://github.com/openkitchen/filebox-mcp#readme",
  "bugs": {
    "url": "https://github.com/openkitchen/filebox-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node build/index.js",
    "build": "bun build src/index.ts --outdir build --target node && bun build src/test-exports.ts --outdir build --target node",
    "build:http": "bun build src/server/http-server.ts --outdir build --target node",
    "dev": "bun --watch src/index.ts",
    "start:http": "bun run src/server/http-server.ts",
    "dev:http": "bun --watch src/server/http-server.ts",
    "test:config": "bun run build/test-exports.js",
    "test:install": "echo '测试 npm 安装方式，请在 MCP 配置中使用：npx @openkitchen/filebox-mcp'",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.11.0"
  },
  "peerDependencies": {
    "@valibot/to-json-schema": "^1.0.0",
    "effect": "^3.14.4",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "fastmcp": "^1.21.0",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  }
}
